	min-height 100%
	height 100%

body
	position relative
	min-height 100%
	padding-bottom 65px !important
	
	background-color #FFF !important
	
.page-footer
	position absolute
	left 0
	bottom 0 

	box-sizing border-box
	height 65px
	width 100%
	padding 25px 0 20px 0
	overflow hidden
	
	background-color #f8f9fa
	
.dropdown.show .dropdown-menu
	display block
	
.page-content
	padding 50px 0 80px 0
	
label.required
	&:after
		content "*"
		
		margin-left 5px
		
		color #CD0520
		
.badge-lg
	margin 0 5px

	font-size 110% !important